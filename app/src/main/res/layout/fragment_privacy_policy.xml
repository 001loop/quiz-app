<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context="com.loop.quizapp.PrivacyPolicyFragment">
    <LinearLayout
        android:id="@+id/fragment_outside_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/messageFragmentOutsideBackground"
        android:alpha="0.8"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_inside_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/shape_message_fragment_background"
        android:padding="@dimen/fragment_inside_padding"
        android:layout_margin="@dimen/fragment_inside_margin">
    <TextView
        android:id="@+id/fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/message_fragment_title_text_size"
        android:layout_marginBottom="@dimen/fragment_between_elements_margin"
        android:textColor="@color/textInMessageFragment"
        android:layout_gravity="center_horizontal" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/fragment_between_elements_margin"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/fragment_between_elements_margin">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="7">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:textSize="@dimen/message_fragment_title_text_size"
                        android:textColor="@color/textInMessageFragment"
                        android:text="@string/personalized_ads"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_personalized_ads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/grid_view_item_horizontal_margin"
                        android:layout_marginStart="@dimen/grid_view_item_horizontal_margin"
                        app:buttonTint="@color/textInMessageFragment"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/fragment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/message_fragment_title_text_size"
                android:textColor="@color/textInMessageFragment"
                android:layout_marginBottom="@dimen/fragment_between_elements_margin"/>
            <TextView
                android:id="@+id/fragment_text_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/message_fragment_title_text_size"
                android:textColor="@color/textLink" />
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
        <LinearLayout
            android:id="@+id/btn_container"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_between_elements_margin"
            android:layout_gravity="center_horizontal">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/second_btn_container"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
